<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminAddActivity">

    <ImageView
        android:id="@+id/select_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/add"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/add_et_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/select_image"
        android:layout_centerHorizontal="true"
        android:hint="Product Name"/>

    <EditText
        android:id="@+id/add_et_description"
        android:layout_width="300dp"

        android:layout_height="wrap_content"
        android:layout_below="@+id/add_et_name"
        android:layout_centerHorizontal="true"
        android:hint="Description"/>

    <EditText
        android:id="@+id/add_et_price"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_et_description"
        android:layout_centerHorizontal="true"
        android:hint="Cost"/>

    <Button
        android:id="@+id/add_btn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Добавить"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/black"
        android:layout_below="@+id/add_et_price"/>

</RelativeLayout>